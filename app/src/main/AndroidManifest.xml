<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.naamashlomtzion.bookme" >

    <uses-permission android:name="android.permission.SEND_SMS" />

    <uses-permissiom android:name="android.permission.INTERNET" />
    <uses-permissiom android:name="android.permission.READ_PHONE_STATE" />
    <uses-permissiom android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permissiom android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ClientActivity"
            android:label="@string/title_activity_client"
            android:theme="@style/AppTheme.NoActionBar" >
        </activity>
        <activity
            android:name=".addActivity"
            android:label="@string/title_activity_add"
            android:theme="@style/AppTheme.NoActionBar" >
        </activity>

        <activity
            android:name=".InvitationBookActivity"
            android:label="@string/title_activity_invitation_book"
            android:theme="@style/AppTheme.NoActionBar" >
        </activity>
        <activity
            android:name=".ListBooksActivity"
            android:label="@string/title_activity_list_books"
            android:theme="@style/AppTheme.NoActionBar" >
        </activity>
        <activity
            android:name=".ProviderActivity"
            android:label="@string/title_activity_provider"
            android:theme="@style/AppTheme.NoActionBar" >
        </activity>
    </application>

</manifest>
