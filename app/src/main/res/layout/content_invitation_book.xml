<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_invitation_book"
    tools:context="com.example.naamashlomtzion.bookme.InvitationBookActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/name_book"
        android:id="@+id/nameBook_textView"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textSize="45dp"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/count_editText"
        android:layout_marginTop="53dp"
        android:layout_below="@+id/nameBook_textView"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:text="מספר עותקים"
        android:textSize="30dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="משלוח"
        android:id="@+id/checkBox"
        android:layout_below="@+id/count_editText"
        android:layout_alignRight="@+id/count_editText"
        android:layout_alignEnd="@+id/count_editText"
        android:layout_marginTop="45dp"
        android:layout_toEndOf="@+id/nameBook_textView"
        android:textSize="30dp"
        android:layout_alignLeft="@+id/nameBook_textView"
        android:layout_alignStart="@+id/nameBook_textView" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/card_editText"
        android:text="מספר כרטיס אשראי"
        android:textSize="30dp"
        android:layout_marginTop="49dp"
        android:layout_below="@+id/checkBox"
        android:layout_alignRight="@+id/ID_editText"
        android:layout_alignEnd="@+id/ID_editText"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ID_editText"
        android:text="תעודת זהות של בעל הכרטיס"
        android:textSize="25dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/card_editText"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="אישור"
        android:id="@+id/bt_OK"
        android:layout_below="@+id/ID_editText"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true" />

</RelativeLayout>
